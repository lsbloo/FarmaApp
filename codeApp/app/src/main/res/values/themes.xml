<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/red_quin</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_20</item>
        <item name="colorSecondaryVariant">@color/black_20</item>
        <item name="colorOnSecondary">@color/black_20</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_20</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FarmaApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FarmaApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FarmaApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>